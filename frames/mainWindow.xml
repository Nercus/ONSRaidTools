<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">

    <Frame name="ONSImagViewMainWindowTemplate" virtual="true" hidden="true" toplevel="true" parent="UIParent" enableMouse="true" movable="true" clampedToScreen="true" registerForDrag="LeftButton">
        <Size x="300" y="300" />
        <Layers>
            <Layer level="ARTWORK">
                <Texture atlas="auctionhouse-background-sell-left">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" />
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" />
                    </Anchors>
                </Texture>
                <FontString name="$parentMoveInfo" parentKey="moveInfo" inherits="GameFontNormal" justifyH="CENTER" text="Drag to move the window!" hidden="true">
                    <Size x="300" y="0" />
                    <Anchors>
                        <Anchor point="CENTER" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
</Ui>
